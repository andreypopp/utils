reset() {
  padding: 0;
  margin: 0;
  font: inherit;
  color: inherit;
  background: transparent;
  border: none;
}

reset-cursor() {
  cursor: pointer;
  user-select: none;
}

reset-layout() {
  position: relative;
  display: inline-block;
  vertical-align: top;
  overflow: hidden;
  text-align: center;
  box-sizing: border-box;
  background-clip: padding-box;
}

ellipsis() {
  text-overflow: ellipsis;
  white-space: nowrap;
}
